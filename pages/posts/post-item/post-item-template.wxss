.post-container{
    display:flex;
    flex-direction:column;
    margin-top:20rpx;
    margin-bottom:40rpx;
    background-color:#fff;
    border-top:1px solid #ededed;
    border-bottom:1px solid #ededed;
    padding-bottom:5px;
}

.post-author-date{
    margin:10rpx 0 20rpx 10rpx;
}

.post-author{
    width:60rpx;
    height: 60rpx;
    /*vertical-align很好用，让图片和文字对其居中，用着那个什么轴线*/
    vertical-align: middle;
}

.post-date{
    margin-left:20rpx;
    vertical-align: middle;
    margin-bottom: 5px;
    font-size:26rpx;
}

.post-title{
    font-size:34rpx;
    font-weight: bold;
    margin-bottom:10px;
    margin-left:10px;
    color:#333;
}

.post-image{
    height:340rpx;
    width:100%;
    margin:auto 0;
    /*margin-bottom:15px;*/
}

.post-content{
    color:#666;
    line-height:40rpx;
    margin-bottom:20rpx;
    margin-left:20rpx;
    font-size:28rpx;
    letter-spacing: 2rpx;
}

.post-like{
    font-size:13px;
    flex-direction: row;
    line-height: 16px;
    margin-left: 10px;
}


.post-like-image{
    width:16px; 
    height:16px;
    margin-right:8px;
    vertical-align:middle;
}

.post-like-font{
    margin-right:20px;
    vertical-align:middle;
}